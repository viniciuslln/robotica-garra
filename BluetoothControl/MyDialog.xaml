<Window x:Class="BluetoothControl.MyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BluetoothControl"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <StackPanel Margin="16">
        <Label Content="Entre com o nome da Sequência:" />
        <TextBox x:Name="ResponseTextBox" MinWidth="250"/>
        <Button Content="OK" Click="OKButton_Click"  HorizontalAlignment="Right" Margin="8" Width="30"/>
    </StackPanel>
</Window>
